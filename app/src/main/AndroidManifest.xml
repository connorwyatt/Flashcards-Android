<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.connorwyatt.flashcards">

    <application
        android:name=".FlashcardsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.legacy.FlashcardCardListActivityLegacy"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.legacy.FlashcardDetailsActivityLegacy"
            android:parentActivityName=".activities.legacy.FlashcardCardListActivityLegacy" />
        <activity android:name=".activities.legacy.FlashcardTestActivityLegacy" />
        <activity android:name=".activities.legacy.CategoriesActivityLegacy" />
        <activity
            android:name=".activities.legacy.CategoryDetailsActivityLegacy"
            android:parentActivityName=".activities.legacy.CategoriesActivityLegacy" />
        <activity android:name=".activities.AuthActivity" />
    </application>

</manifest>
