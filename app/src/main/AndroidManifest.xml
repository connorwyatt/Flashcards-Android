<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.connorwyatt.flashcards">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.FlashcardCardListActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FlashcardDetailsActivity"
            android:parentActivityName=".activities.FlashcardCardListActivity" />
        <activity android:name=".activities.FlashcardTestActivity" />
        <activity android:name=".activities.CategoriesActivity" />
        <activity
            android:name=".activities.CategoryDetailsActivity"
            android:parentActivityName=".activities.CategoriesActivity" />
    </application>

</manifest>
