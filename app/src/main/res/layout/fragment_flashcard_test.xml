<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <io.connorwyatt.flashcards.views.progressbar.ProgressBar
        android:id="@+id/flashcard_test_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:barColor="@color/colorPositive"
        app:unfilledBarColor="@color/colorGrey" />

    <io.connorwyatt.flashcards.views.directionalviewpager.DirectionalViewPager
        android:id="@+id/flashcard_test_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
